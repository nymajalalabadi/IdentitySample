@using IdentitySample.Models
@model List<SiteSetting>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="btn-group mt-4 mb-4">
    <a asp-action="RoleValidationGuid" class="btn btn-primary">RoleValidationGuid</a>
</div>


@if (!Model.Any())
{
    <h2>No setting found</h2>
}
else
{
    
    @foreach (var item in Model)
    {
        <div class="card mt-2">
            <div class="card-header">
                SiteSetting Key : <b>@item.Key</b>
            </div>
            <div class="card-body">
                SiteSetting Value : <b>@item.Value</b>
            </div>
            <div class="card-footer">
                Last Time Value Changed = @item.LastTimeChanged
            </div>
        </div>
    }
}